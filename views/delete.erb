<h3>Which recipe do you want to delete?</h3>
<% @recipes.each_with_index do |recipe, index| %>
  <% if index == 0 || index % 4 == 0 %>
    <div class="w3-row-padding w3-padding-16 w3-center" id="food">
  <% end %>

    <div class="w3-quarter">
      <%= img(recipe.img_url) %>
      <a href=<%= URI.encode "http://localhost:4567/delete/recipe?img_url=#{recipe.img_url}"%>>
      <h3><%= recipe.name %></h3>
      </a>
        <p>
        <i class="fa fa-clock-o" aria-hidden="true"></i>
        <%= recipe.time + ' | ' + recipe.difficulty.upcase %></p>
    </div>
    <% if (index + 1) % 4 == 0 %>
      </div>
    <% end %>
  <% end %>
</div>
